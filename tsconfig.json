{
  "compilerOptions": {
    "noEmit": true,

    "declaration": true,
    "sourceMap": true,
    "lib": ["ES6"],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "__tests__/**/*.ts"]
}
